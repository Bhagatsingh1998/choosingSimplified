<%- include('../partials/head.ejs') %>

<%- include('../partials/nav.ejs') %>

  <main id="main">
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>School Details</h2>
          <ol>
            <li><a href="../index.html">Home</a></li>
            <li>Schools</li>
            <li>School Deatils</li>
          </ol>
        </div>
      </div>
    </section>

    <section class="container">
      <div class="text-center div-main-img ">
        <img class="pic" src="/<%= school.imagePath %>" alt="School">
      </div>
      <br>
      <hr>
      <div>
        <h1 class="main-heading"><%= school.name %></h1>
      </div>
      <br><br>
      <div class="row">
        <div class="col-md-2"></div>
        <table class="all-details col-md-8">
          <thead >
            <tr class="row">
              <td class="col-md-4"></td>
              <td class="col-md-4"></td>
            </tr>
          </thead>
          <tbody>
            <tr class="table-row">
              <td><i class="fas fa-map-marker-alt icon"></i>Loaction</td>
              <td><%= school.location %></td>
            </tr>
            <tr class="table-row">
              <td><i class="fas fa-phone-alt icon"></i>Contact Number</td>
              <td><b>+ 91 </b><%= school.phone %></td>
            </tr>
            <tr class="table-row">
              <td><i class="fas fa-globe-asia icon"></i>Website</td>
              <td><a href="<%= school.website %>"><%= school.website %></a></td>
            </tr>
            <!-- <tr class="table-row">
              <td><i class="fa fa-users icon"></i>Teachers registered</td>
              <td>89</td>
            </tr> -->
            <tr class="table-row">
              <td><i class="fas fa-star icon"></i>Rating</td>
              <td><%= school.stars %></td>
            </tr>
            <tr class="table-row">
              <td><i class="fas fa-star icon"></i>Type of school</td>
              <td><%= school.instituteType %></td>
            </tr>
            <tr class="table-row">
              <td><i class="fas fa-envelope-open-text"></i>Message</td>
              <td><%= school.message %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  </main>

  <%- include('../partials/footer.ejs') %>

  <%- include('../partials/end.ejs') %>  
