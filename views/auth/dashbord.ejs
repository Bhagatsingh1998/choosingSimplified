<%- include('../partials/head.ejs') %>

<%- include('../partials/nav.ejs') %>

  <main id="main ">
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <h2>Dashbord</h2>
          <ol>
            <li>Home</li>
            <li>Dashbord</li>
          </ol>
        </div>
      </div>
    </section>
    
    <section class="container">
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-4 ">
          <% if(imageMsg) { %>
            <div class="text-center" style="color: green;"><%= imageMsg %><br><br></div>
          <% } %>

          <% if(user.imagePath) { %>
            <img class="dashbordPic" src="/<%= user.imagePath %>" alt="">
          <% } else { %>
            <img class="dashbordPic" src="/img/aboutMe.png " alt="">
          <% } %>
          <br>
          <div class="row">
            <form method="POST" action="/auth/post-img" class="col-md-4" enctype="multipart/form-data">
              <label for="fileUpload"></label>
              <input type="file" name="image" class="btn" id="fileUpload">
              <br><br>
              <input type="submit" class="btn UploadBtn text-center" value="Upload Image"/>
            </form>
          </div> 
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-6">
          <a href="#"><h2><%= user.fname %> <%= user.lname %></h2></a>
          <hr class="hrLine">
          <br>
          <div class="row">
            <div class="col-md-4">
              <div>
                Your Email
              </div>
              <div>
                Your Institute
              </div>
              <div>
                You are
              </div>
            </div>
            <div class="col-md-1 text-center textColor" >
              <div>
                :
              </div>
              <div>
                :
              </div>
              <div>
                :
              </div>
            </div>
            <div class="col-md-4">
              <div>
                <%= user.email %>
              </div>
              <div>
                <%= user.institute %>
              </div>
              <div>
                <%= user.userType %>
              </div>
            </div>
          </div>
          <br><br>
          <div class="jumbotron">
            <% if(errorMessage) { %>
              <div class="text-center" style="color: red;"><%= errorMessage %><br><br></div>
            <% } %>
            <h6 class="text-center textColor heading">Reset your password</h6>
            <br>
            <form action="/auth/password-reset" method="post" class="php-email-form mt-4">
              
              <div class="form-group">
                <input type="password" name="oldPassword" class="form-control" id="oldPassword" placeholder="Enter your old Password" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                <div class="validate"></div>
              </div>
              <div class="form-group">
                <input type="password" name="newPassword" class="form-control" id="newPassword" placeholder="Enter your new password" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                <div class="validate"></div>
              </div>
              <div class="form-group">
                <input type="password" name="cPassword" class="form-control" id="cPassword" placeholder="Again enter your new Password" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                <div class="validate"></div>
              </div>
              <div class="text-center"><button class="btn textColor" type="submit"><span><u>Update Password</u></span></button></div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <%- include('../partials/footer.ejs') %>

    <%- include('../partials/end.ejs') %>  